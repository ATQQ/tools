{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["ESNext", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
